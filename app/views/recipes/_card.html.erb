<div class="card mb-3">
  <h2 class="card-header h4">
    Recipe #<%= recipe.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Business</dt>
      <!-- Display business_id start -->
      <dd>
        <% if @recipe.chef.present? %>
          <%= link_to recipe.chef, recipe.chef %>
        <% end %>
      </dd>
      <!-- Display business_id end -->

      <dt>Recipe name</dt>
      <!-- Display recipe_name start -->
      <dd><%= recipe.recipe_name %></dd>
      <!-- Display recipe_name end -->

      <dt>Recipe description</dt>
      <!-- Display recipe_description start -->
      <dd><%= recipe.recipe_description %></dd>
      <!-- Display recipe_description end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back recipe, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link recipe start -->
      <div class="col">
        <% if current_business_account == @recipe.chef %>
          <%= link_to edit_recipe_url(recipe), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link recipe end -->

      <!-- Delete link recipe start -->
      <div class="col">
        <% if current_business_account == @recipe.chef %>
          <%= link_to recipe, method: :delete, data: { confirm: "Do you really want to delete this recipe?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link recipe end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(recipe.updated_at) %> ago
  </div>
</div>
