<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ingredient Reviews

    <a data-toggle="collapse" href="#business_account_ingredient_reviews_new_form">
      Add ingredient review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @business_account.ingredient_reviews.each do |ingredient_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to ingredient_review, ingredient_review %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="business_account_ingredient_reviews_new_form">
        <%= render partial: "business_accounts/business_account_ingredient_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
