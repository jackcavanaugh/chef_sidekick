<%= form_with(model: @recipe, local: true) do |f| %>

  <%= f.hidden_field :business_id, value: @business_account.id %>

  <div class="form-group">
    <%= f.label :recipe_name %>

    <%= f.text_field :recipe_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :recipe_description %>
    <%= f.text_area :recipe_description, rows: "3", class: "form-control" %>
  </div>

  <%= f.submit "Create recipe", class: "btn btn-block btn-outline-secondary" %>
<% end %>
