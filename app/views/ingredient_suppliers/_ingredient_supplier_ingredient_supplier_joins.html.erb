<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ingredient Supplier Joins

    <a data-toggle="collapse" href="#ingredient_supplier_ingredient_supplier_joins_new_form">
      Add ingredient supplier join
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @ingredient_supplier.ingredient_supplier_joins.each do |ingredient_supplier_join| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to ingredient_supplier_join, ingredient_supplier_join %>

        <%= link_to ingredient_supplier_join, method: :delete, data: { confirm: "Do you really want to delete this ingredient_supplier_join" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="ingredient_supplier_ingredient_supplier_joins_new_form">
        <%= render partial: "ingredient_suppliers/ingredient_supplier_ingredient_supplier_joins_new_form" %>
      </div>
    </div>

  </ul>
</div>
