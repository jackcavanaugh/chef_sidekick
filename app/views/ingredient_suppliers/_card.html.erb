<div class="card mb-3">
  <h2 class="card-header h4">
    Ingredient Supplier #<%= ingredient_supplier.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Supplier name</dt>
      <dd><%= ingredient_supplier.supplier_name %></dd>

      <dt>Supplier description</dt>
      <dd><%= ingredient_supplier.supplier_description %></dd>

      <dt>Supplier location</dt>
      <dd><%= ingredient_supplier.supplier_location %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back ingredient_supplier, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_ingredient_supplier_url(ingredient_supplier), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to ingredient_supplier, method: :delete, data: { confirm: "Do you really want to delete this ingredient_supplier?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(ingredient_supplier.updated_at) %> ago
  </div>
</div>
