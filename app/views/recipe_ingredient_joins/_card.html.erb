<div class="card mb-3">
  <h2 class="card-header h4">
    Recipe Ingredient Join #<%= recipe_ingredient_join.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Recipe</dt>
      <!-- Display recipe_id start -->
      <dd>
        <% if @recipe_ingredient_join.recipe.present? %>
          <%= link_to recipe_ingredient_join.recipe, recipe_ingredient_join.recipe %>
        <% end %>
      </dd>
      <!-- Display recipe_id end -->

      <dt>Ingredient</dt>
      <!-- Display ingredient_id start -->
      <dd>
        <% if @recipe_ingredient_join.ingredient.present? %>
          <%= link_to recipe_ingredient_join.ingredient, recipe_ingredient_join.ingredient %>
        <% end %>
      </dd>
      <!-- Display ingredient_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back recipe_ingredient_join, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link recipe_ingredient_join start -->
      <div class="col">
        <%= link_to edit_recipe_ingredient_join_url(recipe_ingredient_join), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link recipe_ingredient_join end -->

      <!-- Delete link recipe_ingredient_join start -->
      <div class="col">
        <%= link_to recipe_ingredient_join, method: :delete, data: { confirm: "Do you really want to delete this recipe_ingredient_join?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link recipe_ingredient_join end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(recipe_ingredient_join.updated_at) %> ago
  </div>
</div>
