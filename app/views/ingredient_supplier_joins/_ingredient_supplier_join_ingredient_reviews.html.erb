<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ingredient Reviews

    <a data-toggle="collapse" href="#ingredient_supplier_join_ingredient_reviews_new_form">
      Add ingredient review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @ingredient_supplier_join.ingredient_reviews.each do |ingredient_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to ingredient_review, ingredient_review %>

        <%= link_to ingredient_review, method: :delete, data: { confirm: "Do you really want to delete this ingredient_review" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="ingredient_supplier_join_ingredient_reviews_new_form">
        <%= render partial: "ingredient_supplier_joins/ingredient_supplier_join_ingredient_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
