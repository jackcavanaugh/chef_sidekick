<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recipe Menu Joins

    <a data-toggle="collapse" href="#menu_recipe_menu_joins_new_form">
      Add recipe menu join
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @menu.recipe_menu_joins.each do |recipe_menu_join| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to recipe_menu_join, recipe_menu_join %>

        <%= link_to recipe_menu_join, method: :delete, data: { confirm: "Do you really want to delete this recipe_menu_join" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="menu_recipe_menu_joins_new_form">
        <%= render partial: "menus/menu_recipe_menu_joins_new_form" %>
      </div>
    </div>

  </ul>
</div>
