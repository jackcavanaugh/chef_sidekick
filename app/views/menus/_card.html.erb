<div class="card mb-3">
  <h2 class="card-header h4">
    Menu #<%= menu.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Menu name</dt>
      <dd><%= menu.menu_name %></dd>

      <dt>Menu creator</dt>
      <dd>
        <% if @menu.menu_creators.present? %>
          <%= link_to menu.menu_creators, menu.menu_creators %>
        <% end %>
      </dd>

      <dt>Menu description</dt>
      <dd><%= menu.menu_description %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back menu, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_business_account == @menu.menu_creators %>
          <%= link_to edit_menu_url(menu), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_business_account == @menu.menu_creators %>
          <%= link_to menu, method: :delete, data: { confirm: "Do you really want to delete this menu?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(menu.updated_at) %> ago
  </div>
</div>
