<div class="card mb-3">
  <h2 class="card-header h4">
    Supplier Review #<%= supplier_review.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Reviewer</dt>
      <dd>
        <% if @supplier_review.chef_reviewer.present? %>
          <%= link_to supplier_review.chef_reviewer, supplier_review.chef_reviewer %>
        <% end %>
      </dd>

      <dt>Supplier</dt>
      <dd>
        <% if @supplier_review.supplier.present? %>
          <%= link_to supplier_review.supplier, supplier_review.supplier %>
        <% end %>
      </dd>

      <dt>Review title</dt>
      <dd><%= supplier_review.review_title %></dd>

      <dt>Review rating</dt>
      <dd><%= supplier_review.review_rating %></dd>

      <dt>Review content</dt>
      <dd><%= supplier_review.review_content %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back supplier_review, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_supplier_review_url(supplier_review), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to supplier_review, method: :delete, data: { confirm: "Do you really want to delete this supplier_review?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(supplier_review.updated_at) %> ago
  </div>
</div>
