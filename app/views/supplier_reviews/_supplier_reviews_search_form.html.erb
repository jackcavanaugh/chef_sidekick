<%= search_form_for @q, :class => collapse_search_form, :id => "supplier_reviews_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :review_content_cont, "Review content contains" %>
    <%= f.text_field :review_content_cont, :class => "form-control", :placeholder => "Review content contains" %>
  </div>

  <div class="form-group">
    <%= f.label :review_rating, "Review rating" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :review_rating_gteq, :class => "form-control", :placeholder => "Review rating greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :review_rating_lteq, :class => "form-control", :placeholder => "Review rating less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :review_title_cont, "Review title contains" %>
    <%= f.text_field :review_title_cont, :class => "form-control", :placeholder => "Review title contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "BusinessAccount Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='chef_reviewergteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :chef_reviewer_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "BusinessAccount Created at greater than or equal to", :data => {:target => '#chef_reviewergteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#chef_reviewergteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='chef_reviewerlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :chef_reviewer_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "BusinessAccount Created at less than or equal to", :data => {:target => '#chef_reviewerlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#chef_reviewerlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#chef_reviewergteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#chef_reviewerlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#chef_reviewergteqcreated_atPicker').on("dp.change", function (e) {
              $('#chef_reviewerlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#chef_reviewerlteqcreated_atPicker').on("dp.change", function (e) {
              $('#chef_reviewergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :supplier_supplier_name_cont, "Supplier supplier_name contains" %>
    <%= f.text_field :supplier_supplier_name_cont, :class => "form-control", :placeholder => "Supplier supplier_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/supplier_reviews" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#supplier_reviews_filters">
  Show filters
</a>
