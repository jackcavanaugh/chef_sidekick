<% was_validated = ingredient_review.errors.any? %>

<%= form_with(model: ingredient_review, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% ingredient_reviewer_class = "form-control" %>
    <% ingredient_reviewer_was_invalid = ingredient_review.errors.include?(:ingredient_reviewer) %>

    <% if was_validated %>
      <% if ingredient_reviewer_was_invalid %>
        <% ingredient_reviewer_class << " is-invalid" %>
      <% else %>
        <% ingredient_reviewer_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :ingredient_reviewer %>
    <%= f.collection_select :ingredient_reviewer, BusinessAccount.all, :id, :to_s, {}, class: "form-control" %>
    <% if ingredient_reviewer_was_invalid %>
      <% ingredient_review.errors.full_messages_for(:ingredient_reviewer).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% ingredient_supplier_join_class = "form-control" %>
    <% ingredient_supplier_join_was_invalid = ingredient_review.errors.include?(:ingredient_supplier_join) %>

    <% if was_validated %>
      <% if ingredient_supplier_join_was_invalid %>
        <% ingredient_supplier_join_class << " is-invalid" %>
      <% else %>
        <% ingredient_supplier_join_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :ingredient_supplier_join_id %>
    <%= f.collection_select :ingredient_supplier_join_id, IngredientSupplierJoin.all, :id, :to_s, {}, class: "form-control" %>
    <% if ingredient_supplier_join_was_invalid %>
      <% ingredient_review.errors.full_messages_for(:ingredient_supplier_join).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% ingredient_supplier_rating_class = "form-control" %>
    <% ingredient_supplier_rating_was_invalid = ingredient_review.errors.include?(:ingredient_supplier_rating) %>

    <% if was_validated %>
      <% if ingredient_supplier_rating_was_invalid %>
        <% ingredient_supplier_rating_class << " is-invalid" %>
      <% else %>
        <% ingredient_supplier_rating_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :ingredient_supplier_rating %>
    <%= f.number_field :ingredient_supplier_rating, class: ingredient_supplier_rating_class, placeholder: "Enter ingredient supplier rating" %>
    <% if ingredient_supplier_rating_was_invalid %>
      <% ingredient_review.errors.full_messages_for(:ingredient_supplier_rating).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% ingredient_supplier_review_description_class = "form-control" %>
    <% ingredient_supplier_review_description_was_invalid = ingredient_review.errors.include?(:ingredient_supplier_review_description) %>

    <% if was_validated %>
      <% if ingredient_supplier_review_description_was_invalid %>
        <% ingredient_supplier_review_description_class << " is-invalid" %>
      <% else %>
        <% ingredient_supplier_review_description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :ingredient_supplier_review_description %>
    <%= f.text_area :ingredient_supplier_review_description, class: ingredient_supplier_review_description_class, placeholder: "Enter ingredient supplier review description" %>
    <% if ingredient_supplier_review_description_was_invalid %>
      <% ingredient_review.errors.full_messages_for(:ingredient_supplier_review_description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
