<div class="card mb-3">
  <h2 class="card-header h4">
    Ingredient Review #<%= ingredient_review.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Ingredient reviewer</dt>
      <dd>
        <% if @ingredient_review.ingredient_reviewers.present? %>
          <%= link_to ingredient_review.ingredient_reviewers, ingredient_review.ingredient_reviewers %>
        <% end %>
      </dd>

      <dt>Ingredient supplier join</dt>
      <dd>
        <% if @ingredient_review.ingredient_supplier_join.present? %>
          <%= link_to ingredient_review.ingredient_supplier_join, ingredient_review.ingredient_supplier_join %>
        <% end %>
      </dd>

      <dt>Ingredient supplier rating</dt>
      <dd><%= ingredient_review.ingredient_supplier_rating %></dd>

      <dt>Ingredient supplier review description</dt>
      <dd><%= ingredient_review.ingredient_supplier_review_description %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back ingredient_review, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_ingredient_review_url(ingredient_review), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to ingredient_review, method: :delete, data: { confirm: "Do you really want to delete this ingredient_review?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(ingredient_review.updated_at) %> ago
  </div>
</div>
